<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_img"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/btn_choose"
        android:layout_below="@id/iv_img"
        android:layout_centerHorizontal="true"
        android:text="选择图片"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_above="@id/iv_img"
        android:layout_centerHorizontal="true"
        android:text="选择图片,区分鼠标键盘"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_choose"
        android:id="@+id/tv_result_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_result_m"
        android:id="@+id/tv_result_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:visibility="gone"
        android:layout_below="@id/iv_img"
        android:layout_toEndOf="@id/btn_choose"
        android:id="@+id/pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>